<?xml version="1.0" encoding="utf-8"?>
<com.reactnativechimesdk.views.ChimeView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@android:color/white">

  <com.amazonaws.services.chime.sdk.meetings.audiovideo.video.DefaultVideoRenderView
    android:id="@+id/videoView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false" />

  <ImageView
    android:id="@+id/thumbnail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitCenter" />

</com.reactnativechimesdk.views.ChimeView>
